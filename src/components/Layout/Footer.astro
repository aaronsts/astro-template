---
import Icon from 'astro-icon'
import { navigationLinks } from './Header.astro'
---

<footer class="bg-black text-white">
	<div class="container mx-auto flex justify-between px-4 py-16">
		<div>
			<!-- Brand Logo -->
			<a href="/" aria-label="Back to Home" role="button" tabindex="0">
				<img
					src="/assets/logo-white.svg"
					class="h-12"
					height="48"
					width="156"
					alt="Changing Views Media Logo"
				/>
			</a>
			<p class="mt-4 w-44 text-sm text-white/80">
				Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde accusantium ea earum quas!
				Animi corporis.
			</p>
		</div>
		<div>
			<h4 class="text-xl">Sitemap</h4>
			<ul class="mt-4 flex flex-col gap-2">
				{
					navigationLinks.map((link) => (
						<li>
							<a class="text-base font-light hover:text-accent" href={link.href}>
								{link.name}
							</a>
						</li>
					))
				}
			</ul>
		</div>
		<div class="flex flex-col justify-between">
			<div class="grid gap-4">
				<h4 class="text-xl">Contact</h4>
				<div class="grid gap-2">
					<div class="flex items-center gap-2">
						<Icon name="phone" class="h-6 w-6" /><a
							href="tel:+12298548201"
							class="underline-offset-2 hover:underline">+1 (229) 854 8201</a
						>
					</div>
					<div class="flex items-center gap-2">
						<Icon name="email" class="h-6 w-6" /><a
							href="mailto:amy@changingviews.media"
							class="underline-offset-2 hover:underline">amy@changingviews.media</a
						>
					</div>
				</div>
			</div>
			<div class="flex gap-4">
				<div class="flex items-center gap-2">
					<a href="#" class="inline-block transition-transform hover:scale-110">
						<Icon pack="simple-icons" name="google" class="h-6 w-6" />
					</a>
				</div>
				<div class="flex items-center gap-2">
					<a href="#" class="inline-block transition-transform hover:scale-110">
						<Icon pack="simple-icons" name="facebook" class="h-6 w-6" />
					</a>
				</div>
				<div class="flex items-center gap-2">
					<a href="#" class="inline-block transition-transform hover:scale-110">
						<Icon pack="simple-icons" name="instagram" class="h-6 w-6" />
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="mx-auto w-4/5 border-t border-white/20">
		<p class="mx-auto w-fit py-8 text-sm font-light">
			Â© Copyright 2023 - <a
				href="https://changingviews.media/"
				class="underline-offset-2 hover:underline">Changing Views Media</a
			>
		</p>
	</div>
</footer>
